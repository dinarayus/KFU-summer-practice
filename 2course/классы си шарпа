using System;

public class OctalNumber
{
    private string octalValue;

    // –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
    public OctalNumber()
    {
        octalValue = "0";
    }

    // –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∏–∑ —Å—Ç—Ä–æ–∫–∏ (–ø—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ—Ç—Å—è, —á—Ç–æ —Å—Ç—Ä–æ–∫–∞ –∫–æ—Ä—Ä–µ–∫—Ç–Ω–∞—è)
    public OctalNumber(string value)
    {
        if (!IsValidOctal(value))
            throw new ArgumentException("–ù–µ–≤–µ—Ä–Ω–æ–µ –≤–æ—Å—å–º–µ—Ä–∏—á–Ω–æ–µ —á–∏—Å–ª–æ.");
        octalValue = value;
    }

    // –°–≤–æ–π—Å—Ç–≤–æ –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è/—É—Å—Ç–∞–Ω–æ–≤–∫–∏ –∑–Ω–∞—á–µ–Ω–∏—è
    public string Value
    {
        get => octalValue;
        set
        {
            if (!IsValidOctal(value))
                throw new ArgumentException("–ù–µ–≤–µ—Ä–Ω–æ–µ –≤–æ—Å—å–º–µ—Ä–∏—á–Ω–æ–µ —á–∏—Å–ª–æ.");
            octalValue = value;
        }
    }

    // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ—Å—Ç–∏ –≤–æ—Å—å–º–µ—Ä–∏—á–Ω–æ–≥–æ —á–∏—Å–ª–∞
    private bool IsValidOctal(string value)
    {
        foreach (char c in value)
        {
            if (c < '0' || c > '7') return false;
        }
        return true;
    }

    // –ü—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ –≤ –¥–µ—Å—è—Ç–∏—á–Ω–æ–µ —á–∏—Å–ª–æ
    public int ToDecimal()
    {
        int result = 0;
        foreach (char c in octalValue)
        {
            result = result * 8 + (c - '0');
        }
        return result;
    }

    // –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –≤—ã–≤–æ–¥
    public override string ToString()
    {
        return $"(Octal: {octalValue}, Decimal: {ToDecimal()})";
    }

    // –û–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è
    public static bool operator ==(OctalNumber a, OctalNumber b)
    {
        return a.ToDecimal() == b.ToDecimal();
    }

    public static bool operator !=(OctalNumber a, OctalNumber b)
    {
        return !(a == b);
    }

    public static bool operator <(OctalNumber a, OctalNumber b)
    {
        return a.ToDecimal() < b.ToDecimal();
    }

    public static bool operator >(OctalNumber a, OctalNumber b)
    {
        return a.ToDecimal() > b.ToDecimal();
    }

    // –î–æ—Å—Ç—É–ø –∫ —Ü–∏—Ñ—Ä–µ –ø–æ –∏–Ω–¥–µ–∫—Å—É
    public char this[int index]
    {
        get
        {
            if (index < 0 || index >= octalValue.Length)
                throw new IndexOutOfRangeException();
            return octalValue[index];
        }
        set
        {
            if (index < 0  index >= octalValue.Length  value < '0' || value > '7')
                throw new ArgumentException("–ù–µ–¥–æ–ø—É—Å—Ç–∏–º—ã–π —Å–∏–º–≤–æ–ª –∏–ª–∏ –∏–Ω–¥–µ–∫—Å.");
            char[] chars = octalValue.ToCharArray();
            chars[index] = value;
            octalValue = new string(chars);
        }
    }

    // –ü–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ Equals –∏ GetHashCode –¥–ª—è –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ–π —Ä–∞–±–æ—Ç—ã == –∏ !=
    public override bool Equals(object obj)
    {
        if (obj is OctalNumber other)
            return this == other;
        return false;
    }

    public override int GetHashCode()
    {
        return ToDecimal().GetHashCode();
    }
}

